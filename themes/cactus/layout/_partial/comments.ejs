<% if(page.comments && theme.disqus.enabled){ %>
    <div id="load-disqus" style="display: inline;">
        <p onclick="loadDisqus()" style="cursor:pointer;text-align:center">🤪&nbsp;加载 Disqus 评论<br> Load Disqus comments</p>
    </div>
    <div id="unload-disqus" style="display: none;">
        <p onclick="loadDisqus()" style="cursor:pointer;text-align:center">😭&nbsp;Sorry，当前网络无法加载 Disqus，请使用代理并重新加载<br>Sorry, Disqus can't be loaded in this network environment, please use a proxy and reload</p>
    </div>
    <div class="blog-post-comments">
        <div id="disqus_thread">
            <noscript><%= __('comments.no_js') %></noscript>
        </div>
    </div>
<% } %>
